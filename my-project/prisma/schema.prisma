generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma" // Ensure this output path exists in your project
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Ensure DATABASE_URL is set in your .env file
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  isAdmin  Boolean @default(false)
  jobs     Job[]  // Relation with Job model

  // Ensure that this is the table name you want in the DB if you want snake_case
  @@map("users") // Optional: If your table is named 'users' in the DB
}

model Job {
  id          Int      @id @default(autoincrement())
  title       String
  company     String
  location    String
  type        String
  description String
  userId      Int      // Foreign key for User
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now()) // Automatically set the creation time

  // If you want snake_case column names, use @map on the fields
  @@map("jobs") // Optional: If your table is named 'jobs' in the DB
}
